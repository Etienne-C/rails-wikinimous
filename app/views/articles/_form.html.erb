<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8 ">
      <%= form_for(@article) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %><br>

        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control form-height' %><br>

        <%= f.submit :validate, class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-xs-2"></div>
  </div>

</div>


